<% layout('layouts/boilerplate') %>


<h1 class="text-center">Confirm Your Order!</h1>

<div class="formBox">
    <form action="/products/<%=productDetails.productId%>/buy" method="post">
        <div class="row">
            <div class="mb-3 col">
                <input type="text" name="city" id="city" placeholder="City" required value="<%= userDetails.city %> ">
            </div>
            <div class="mb-3 col">
                <input type="text" name="phone" id="phone" placeholder="Phone" required value="<%= userDetails.phone %> ">
            </div>
        </div>

        <div class="row">
            <div class="mb-3 col">
                <input type="text" name="state" id="state" placeholder="State" required value="<%= userDetails.state %> ">
            </div>
            <div class="mb-3 col">
                <input type="text" name="address" id="address" placeholder="Complete Address" required value="<%= userDetails.street %> ">
            </div>
        </div>

        <button type="submit" class="btn btn-lg btn-primary">Submit</button>
    </form>
</div>